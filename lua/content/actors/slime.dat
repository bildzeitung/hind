{
	AI = function(self)
		if not self._currentAction == 'die' then
			if not self._currentAction == 'attack' and math.random() > 0.95 then
				local xv = math.random()*200-100
				local yv = math.random()*200-100
						
				if math.abs(xv) < 50 then xv = 0 end
				if math.abs(yv) < 50 then yv = 0 end
						
				self:velocity(xv, yv)				
					
				if yv > 0 then
					self:animation('walkdown')
				elseif yv < 0 then
					self:animation('walkup')
				end
						
				if xv > 0 then 
					self:animation('walkright')
				elseif xv < 0 then
					self:animation('walkleft')
				end
			end		
			if math.random() > 0.995 then
				self:action('attack')
			end										
		end				
	end,
	on_take_damage = function(self, damage)
		createFloatingText({255,0,0,255},self, damage)
	end,
	on_begin_die = function(self)		
		self:velocity(0,0)
		if self._killer.rewardExperience then
			self._killer:rewardExperience(100)			
			createFloatingText({0,255,255,255},self._killer, 100)
		end
	end,		
	on_end_die = function(self, other)			
		removals[self._id] = self				
		-- drop a coin?
		if math.random() > 0.25 then
			dropCoin(self)
		end
	end,
	on_begin_attack = function(self)
	end,
	on_end_attack = function(self)
		self:resetCollisions()
	end,
	on_collide = function(self, other)
		if self._currentAction == 'attack' and not other._currentAction == 'die' and other._id and other.HERO then
			if not self._collidees[other._id] then
				self:doDamage(other)				
				self._collidees[other._id] = true
			end
		end
	end,
